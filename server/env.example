# Environment variables for GRIMPE server
# Copy this file to .env and adjust values as needed

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/grimpe

# JWT Configuration (IMPORTANT: Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-please
JWT_EXPIRES_IN=30d

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (allowed origins)
CORS_HOSTS=http://localhost:5173,http://localhost:3000,http://localhost:5174

# Optional: Additional MongoDB settings
# MONGODB_CONNECT_TIMEOUT_MS=30000
# MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000 